#include <stdio.h>
#include <string.h>

int main() {
    char name[100];
    char *word;
    char last[20];

    printf("Enter full name: ");
    gets(name);

    word = strtok(name, " ");
    while(word != NULL){
        strcpy(last, word);
        word = strtok(NULL, " ");
        if(word != NULL)
            printf("%c. ", last[0]);
    }

    printf("%s\n", last);

    return 0;
}
